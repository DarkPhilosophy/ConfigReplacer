<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Clear any inherited sources to avoid conflicts -->
    <clear />
    <!-- Primary NuGet.org source -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    <!-- Local packages directory for offline or custom packages -->
    <add key="local" value=".\packages" />
  </packageSources>
  <packageRestore>
    <!-- Enable automatic package restore -->
    <add key="enabled" value="True" />
    <!-- Allow restoring packages during MSBuild -->
    <add key="automatic" value="True" />
  </packageRestore>
</configuration>