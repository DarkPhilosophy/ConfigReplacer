<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Window Title -->
    <system:String x:Key="AppTitle">Înlocuitor de Configurație</system:String>

    <!-- Header -->
    <system:String x:Key="HeaderTitle">Înlocuitor de Șiruri în Fișiere de Configurare</system:String>
    <system:String x:Key="HeaderSubtitle">Înlocuiește FFTesterBER ↔ FFTesterSCH în fișierele de configurare</system:String>

    <!-- File Information -->
    <system:String x:Key="FilesToProcess">Fișiere de procesat:</system:String>

    <!-- Status Messages -->
    <system:String x:Key="ReadyMessage">Gata pentru procesarea fișierelor. Faceți clic pe unul dintre butoanele de mai jos pentru a începe.</system:String>

    <!-- Log Messages -->
    <system:String x:Key="StartingReplacement">Începerea înlocuirii '{0}' cu '{1}'...</system:String>
    <system:String x:Key="ProcessingFile">Procesarea fișierului: {0}</system:String>
    <system:String x:Key="FileReadSuccess">Fișier citit cu succes.</system:String>
    <system:String x:Key="JsonValidationSuccess">Validare JSON reușită.</system:String>
    <system:String x:Key="ReplacedOccurrences">Înlocuit {0} apariție(i) a '{1}' cu '{2}'</system:String>
    <system:String x:Key="NoOccurrencesFound">Nu s-au găsit apariții ale '{0}' în acest fișier.</system:String>
    <system:String x:Key="FileNotFound">Fișier negăsit: {0}</system:String>
    <system:String x:Key="ErrorProcessing">Eroare la procesarea {0}: {1}</system:String>
    <system:String x:Key="CompletedReplacements">Finalizat! Total înlocuiri efectuate: {0}</system:String>
    <system:String x:Key="ErrorMessage">Eroare: {0}</system:String>
    <system:String x:Key="LanguageChanged">Limba a fost schimbată în {0}</system:String>
    <system:String x:Key="FileStatusSummary">{0} fișiere cu BER, {1} fișiere cu SCH, {2} fișiere cu erori</system:String>
    <system:String x:Key="ButtonsDisabled">Unul sau mai multe fișiere nu au fost găsite sau au erori. Butoanele sunt dezactivate.</system:String>
    <system:String x:Key="InvalidJsonWarning">Avertisment: Fișierul conține JSON invalid. Se continuă doar cu înlocuirea textului.</system:String>

    <!-- Buttons -->
    <system:String x:Key="BERtoSCHButton">Înlocuiește BER → SCH</system:String>
    <system:String x:Key="SCHtoBERButton">Înlocuiește SCH → BER</system:String>
    <system:String x:Key="LanguageButton">Schimbă la Engleză</system:String>

    <!-- Copyright -->
    <system:String x:Key="Copyright">© 2025 Licență MIT - Flex - Autor: Adalbert Alexandru Ungureanu</system:String>
</ResourceDictionary>
